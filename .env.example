# Environment variables for EEG Authentication System

# Model paths
MODEL_PATH=checkpoints/best.ckpt
PROTOTYPES_PATH=models/prototypes.npz
CALIBRATOR_PATH=models/calibrator.pkl
SPOOF_MODEL_PATH=models/spoof_model.pth

# Database
DB_PATH=auth.db

# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Device
DEVICE=cpu  # or cuda

# Optional: Weights & Biases (uncomment to use)
# WANDB_API_KEY=your_wandb_api_key_here
# WANDB_PROJECT=eeg-authentication
# WANDB_ENTITY=your_username

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Security (change in production)
SECRET_KEY=your-secret-key-here
AUTH_THRESHOLD=0.5
SPOOF_PERCENTILE=99.0
