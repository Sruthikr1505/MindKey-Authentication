{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/eeg-auth-app/dist"
      }
    },
    {
      "src": "src/api/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/api/main.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/eeg-auth-app/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/eeg-auth-app/dist/index.html"
    }
  ]
}